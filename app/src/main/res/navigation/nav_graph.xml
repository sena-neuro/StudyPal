<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/mainFragment">

    <fragment
            android:id="@+id/mainFragment"
            android:name="com.example.studypal.MainFragment"
            android:label="fragment_main"
            tools:layout="@layout/fragment_main" >
        <action
                android:id="@+id/action_mainFragment_to_signInFragment"
                app:destination="@id/signInFragment" />
        <action
                android:id="@+id/action_mainFragment_to_signUpFragment"
                app:destination="@id/signUpFragment" />
        <action
                android:id="@+id/action_mainFragment_to_homeFragment"
                app:destination="@id/navigation_home"
                app:popUpTo="@id/mainFragment"
                app:popUpToInclusive="true" />
        <argument
                android:name="action"
                app:argType="string"
                android:defaultValue="none" />
    </fragment>
    <fragment
            android:id="@+id/signInFragment"
            android:name="com.example.studypal.SignInFragment"
            android:label="fragment_sign_in"
            tools:layout="@layout/fragment_sign_in" >
        <action
                android:id="@+id/action_signInFragment_to_homeFragment"
                app:destination="@id/navigation_home"
                app:popUpTo="@id/mainFragment"
                app:popUpToInclusive="true"/>
    </fragment>
    <fragment
            android:id="@+id/signUpFragment"
            android:name="com.example.studypal.SignUpFragment"
            android:label="fragment_sign_up"
            tools:layout="@layout/fragment_sign_up" >
        <action
                android:id="@+id/action_signUpFragment_to_homeFragment"
                app:destination="@id/navigation_home"
                app:popUpTo="@id/navigation_home"
                app:popUpToInclusive="true"/>
    </fragment>
    <fragment
            android:id="@+id/navigation_home"
            android:name="com.example.studypal.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home" >
        <action
                android:id="@+id/action_navigation_home_to_streamSettingsFragment"
                app:destination="@id/streamSettingsFragment" />
        <action
                android:id="@+id/action_navigation_home_to_mainFragment"
                app:destination="@id/mainFragment"
                app:popUpTo="@+id/mainFragment"
                app:popUpToInclusive="true">
            <argument
                    android:name="action"
                    android:defaultValue="none" />
        </action>
    </fragment>
    <fragment
            android:id="@+id/navigation_profile"
            android:name="com.example.studypal.ProfileFragment"
            android:label="fragment_profile"
            tools:layout="@layout/fragment_profile" />
    <fragment
            android:id="@+id/navigation_settings"
            android:name="com.example.studypal.SettingsFragment"
            android:label="fragment_settings"
            tools:layout="@layout/fragment_settings" />
    <fragment
            android:id="@+id/navigation_social"
            android:name="com.example.studypal.SocialFragment"
            android:label="fragment_social"
            tools:layout="@layout/fragment_social" />
    <fragment
            android:id="@+id/streamSettingsFragment"
            android:name="com.example.studypal.StreamSettingsFragment"
            android:label="fragment_stream_settings"
            tools:layout="@layout/fragment_stream_settings" />
</navigation>